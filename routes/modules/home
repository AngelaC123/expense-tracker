const express = require('express')
const router = express.Router()

const Category = require('../../models/category')
const Expense = require('../../models/expense')

let categoriesDisplay = []
let totalAmount = 0

router.get('/', (req, res) => {

  Category.find()
    .lean()
    .then(categories => {
      categoriesDisplay = categories
    })

  return Expense.find()
    .lean()
    .then(expense => {
      let totalAmount = 0
      expense.forEach(record => totalAmount += record.amount)
      res.render('index', { expense, category: categoriesDisplay, totalAmount })
    })
    .catch(err => console.log(err))



})
module.exports = router