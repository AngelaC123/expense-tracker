<div class="login-content-block col-12 mx-auto">
  <div class="card">
    <div class="card-body mb-4">

      <div class=" mt-5 col-7 mx-auto" style="border: px solid red;">
        <h2 class="text-center">登入</h2>
        <span class="notes ms-auto text-end d-block mt-3">
          <span class="text-danger">*</span>
          必填欄位
        </span>
      </div>

      <form class="mb-4 col-7 mx-auto" action="/user/login" method="post">

        <label for="email" class="form-label text-end px-0 mb-1">
          <span class="text-danger">*</span>
          Email：
        </label>
        <input type="email" class="form-control mb-4" id="email" name="email" value="" required>

        <label for="password" class="form-label text-end px-0 mb-1">
          <span class="text-danger">*</span>
          密碼：
        </label>
        <input type="password" class="form-control mb-3" id="password" name="password" value="" required>

        <span>還沒註冊帳號？</span>
        <a href="/user/register">註冊</a>

        <button type="submit" class="btn btn-warning btn-lg mt-5 d-block col-5 mx-auto">登入</button>
      </form>

    </div>
  </div>
</div>