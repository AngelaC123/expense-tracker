<div class="new-content-block col-12 mx-auto">

  <div class="title d-flex flex-row-reverse justify-content-center me-0">
    <h4 class="text-center ">請輸入你的支出</h4>
    <span class="ms-0 me-4 notes">
      <span class="text-danger p-0">*</span>
      必填欄位
    </span>
  </div>


  <form action="/expenses" method="post" class="col-6 mx-auto mt-4">

    <div class="mb-3 row mb-4">
      <label for="name" class="col-4 col-form-label text-end px-0">
        <span class=" text-danger">*</span>
        名稱：
      </label>
      <div class="col-8">
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
    </div>

    <div class="mb-3 row mb-4">
      <label for="date" class="col-4 col-form-label text-end px-0">
        <span class=" text-danger">*</span>
        日期：
      </label>
      <div class="col-8">
        <input type="date" class="form-control" id="date" name="date" required>
      </div>
    </div>

    <div class="mb-3 row mb-4">
      <label for="category" class="col-4 col-form-label text-end px-0">
        <span class="text-danger">*</span>
        類別：
      </label>
      <div class="col-8">
        <select class="form-select required" aria-label="Default select example" name="categoryId">
          <option selected>請選擇類別</option>
          {{#each category}}
          <option value="{{this._id}}">{{this.name}}</option>
          {{/each}}
          {{!-- <option value="1">家居物業</option>
          <option value="2">交通出行</option>
          <option value="3">休閒娛樂</option>
          <option value="4">餐飲食品</option>
          <option value="5">其他</option> --}}
        </select>
      </div>
    </div>

    <div class="mb-3 row mb-4">
      <label for="amount" class="col-4 col-form-label text-end px-0">
        <span class="text-danger">*</span>
        金額：
      </label>
      <div class="col-8">
        <input type="number" class="form-control" id="amount" name="amount" required>
      </div>
    </div>

    <div class="text-end">
      <button class="btn btn-warning col-6 me-4">新增支出</button>
    </div>
  </form>

</div>